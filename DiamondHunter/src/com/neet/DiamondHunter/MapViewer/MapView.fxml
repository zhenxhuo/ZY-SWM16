<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" prefHeight="640.0" prefWidth="960.0"
	xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.neet.DiamondHunter.MapViewer.MapController">
	<children>
		<BorderPane layoutX="16.0" layoutY="16.0">
			<center>
				<StackPane fx:id="mapStack">
					<children>
						<Canvas fx:id="mvCanvas" height="640.0" width="640.0" />
						<GridPane fx:id="tileMapping"></GridPane>
					</children>
				</StackPane>
			</center>
			<left>
				<VBox fx:id="tileVBox" style="-fx-background-color:#3E4FFF;"
					BorderPane.alignment="CENTER">
					<children>
						<TextArea fx:id="tileInfoText" maxHeight="-Infinity"
							minHeight="-Infinity" prefHeight="251.0" prefWidth="253.0"
							style="-fx-border-color: #000000; -fx-border-width: 5; -fx-border-radius: 5; -fx-background-radius: 5;"
							wrapText="true">
							<font>
								<Font size="20.0" />
							</font>
							<VBox.margin>
								<Insets top="8" bottom="8" left="4" right="4" />
							</VBox.margin>
						</TextArea>
						<Button fx:id="btnPlayGame" maxWidth="256" mnemonicParsing="false"
							onAction="#playGame"
							style="-fx-background-color: rgba(255, 255,255, 0.5); -fx-border-color: #000000; -fx-border-width: 5; -fx-border-radius: 5;"
							text="Play Game" textAlignment="CENTER">
							<font>
								<Font name="8BIT WONDER Nominal" size="24.0" />
							</font>
							<VBox.margin>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</VBox.margin>
						</Button>
						<Button fx:id="btnSave" maxWidth="256" mnemonicParsing="false"
							onAction="#saveCoor"
							style="-fx-background-color: rgba(255, 255,255, 0.5); -fx-border-width: 5; -fx-border-color: #000000; -fx-border-radius: 5;"
							text="Save" textAlignment="CENTER">
							<font>
								<Font name="8BIT WONDER Nominal" size="24.0" />
							</font>
							<VBox.margin>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</VBox.margin>
						</Button>
						<Button fx:id="btnExit" maxWidth="256" mnemonicParsing="false"
							onAction="#exitMapView"
							style="-fx-background-color: rgba(255, 255,255, 0.5); -fx-border-color: #000000; -fx-border-width: 5; -fx-border-radius: 5;"
							text="Exit" textAlignment="CENTER">
							<font>
								<Font name="8BIT WONDER Nominal" size="24.0" />
							</font>
							<VBox.margin>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</VBox.margin>
						</Button>
					</children>
					<BorderPane.margin>
						<Insets left="10.0" />
					</BorderPane.margin>
				</VBox>
			</left>
		</BorderPane>
	</children>
</AnchorPane>
